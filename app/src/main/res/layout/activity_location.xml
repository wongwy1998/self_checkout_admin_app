<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Location"
    android:background="@color/white">



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linearLoctop"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp">
       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Alcohol"
           android:background="@color/skin"
           android:textColor="@color/black"
           android:textStyle="bold"
           android:layout_marginLeft="10dp"
           android:layout_marginRight="10dp"
            android:id="@+id/btnalcohol"
           />
            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Dairy"
                android:background="@color/lightGreen"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="0dp"
                android:id="@+id/dairy"
                />

            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Meat"
                android:background="@color/red"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:id="@+id/meat"
                android:textAlignment="center"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linearLocright"
            android:layout_below="@+id/linearLoctop"
            android:layout_marginTop="50dp"

           >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cafe"
                android:background="@color/orange"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="50dp"
                android:id="@+id/btncafe"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bakery"
                android:background="@color/skin"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:id="@+id/bakery"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ATM"
                android:background="@color/lightBlue"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:id="@+id/atm"
                />
        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLocLeft"
        android:layout_below="@+id/linearLoctop"
        android:layout_marginLeft="280dp"
        >
        <Button
            android:layout_width="65dp"
            android:layout_height="100dp"
            android:text="SEAFOOD"
            android:background="@color/lightBlue"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="50dp"
            android:id="@+id/btnSeafood"
            />
        <Button
            android:layout_width="65dp"
            android:layout_height="150dp"
            android:text="PRODUCE"
            android:background="@color/mint"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="50dp"
            android:id="@+id/produce"
            />

        <Button
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="TROLLEY"
            android:background="@color/grey"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="80dp"

            android:id="@+id/Trolley"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/layout_shelf"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="50dp"
        android:layout_below="@+id/linearLoctop">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layout_shelfa"

        >
    <ImageView
        android:id="@+id/j"
        android:layout_width="25dp"
        android:layout_height="91dp"
        android:background="@drawable/input_design"
        android:src="@drawable/j"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
       />

    <ImageView
        android:id="@+id/i"
        android:layout_width="25dp"
        android:layout_height="91dp"
        android:background="@drawable/input_design"
        android:src="@drawable/i"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        />

    <ImageView
        android:id="@+id/h"
        android:layout_width="25dp"
        android:layout_height="91dp"
        android:background="@drawable/input_design"
        android:src="@drawable/h"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>

    <ImageView
        android:id="@+id/g"
        android:layout_width="25dp"
        android:layout_height="91dp"
        android:background="@drawable/input_design"
        android:src="@drawable/g"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>

    <ImageView
        android:id="@+id/f"
        android:layout_width="25dp"
        android:layout_height="91dp"
        android:background="@drawable/input_design"
        android:src="@drawable/f"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/layout_shelfb"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/layout_shelfa">
    <ImageView
        android:id="@+id/e"
        android:layout_width="25dp"
        android:layout_height="91dp"
        android:background="@drawable/input_design"
        android:src="@drawable/e"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />

    <ImageView
        android:id="@+id/d"
        android:layout_width="25dp"
        android:layout_height="91dp"
        android:background="@drawable/input_design"
        android:src="@drawable/d"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>

    <ImageView
        android:id="@+id/c"
        android:layout_width="25dp"
        android:layout_height="91dp"
        android:background="@drawable/input_design"
        android:src="@drawable/c"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />

    <ImageView
        android:id="@+id/b"
        android:layout_width="25dp"
        android:layout_height="91dp"
        android:background="@drawable/input_design"
        android:src="@drawable/b"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>

    <ImageView
        android:id="@+id/a"
        android:layout_width="25dp"
        android:layout_height="91dp"
        android:background="@drawable/input_design"
        android:src="@drawable/a"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />

    </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/layout_shelf"
        android:id="@+id/layoutreg"
        android:layout_marginTop="40dp">
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Register"
            android:background="@color/coklat"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:id="@+id/register"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kiosk"
            android:background="@color/coklat"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:id="@+id/Kiosk"
            />


    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/sgo"
            android:layout_below="@+id/layoutreg"

            >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scan Go"
                android:background="@color/orange"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="150dp"
                android:id="@+id/scanOut"
                />

            <ImageView
                android:layout_width="111dp"
                android:layout_height="73dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="-58dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="58dp"
                android:src="@drawable/exit" />

        </LinearLayout>

</RelativeLayout>

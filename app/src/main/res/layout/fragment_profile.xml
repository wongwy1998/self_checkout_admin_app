<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@color/red">

    </RelativeLayout>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/ToolbarLoc"
        app:title="Personal Information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="180dp"
        android:layout_marginBottom="30dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="15dp"
        >
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:id="@+id/pl1"
            android:layout_marginTop="30dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/leftProfile"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Username:"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textAlignment="viewEnd"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name:"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textAlignment="viewEnd"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email:"
                    android:textSize="20dp"
                    android:layout_marginTop="27dp"
                    android:textStyle="bold"
                    android:textAlignment="viewEnd"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone No.:"
                    android:textSize="20dp"

                    android:textStyle="bold"
                    android:textAlignment="viewEnd"
                    android:layout_marginTop="20dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Address:"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginTop="18dp"
                    android:textAlignment="viewEnd"
                    />






            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:id="@+id/rightProfile">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="username"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Name"
                    android:textSize="20dp"
                    android:id="@+id/profileName"
                    android:textAlignment="center"/>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:textSize="20dp"
                    android:id="@+id/profileEmail"
                    android:inputType="textEmailAddress"
                    android:textAlignment="center"/>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Phone"
                    android:textSize="20dp"
                    android:id="@+id/profilePhone"
                    android:inputType="number"
                    android:textAlignment="center"/>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Address"
                    android:id="@+id/profileAddress"
                    android:textSize="20dp"
                    android:textAlignment="center"/>
            </LinearLayout>


        </LinearLayout>

    <View
        android:id="@+id/dividerP1"
        android:layout_width="match_parent"
        android:layout_height="0.8sp"
        android:layout_below="@+id/pl1"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:background="@color/grey" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dividerP1"
        android:id="@+id/showPass"
        android:text="Change Password"
        android:textAlignment="center"
        android:textSize="15dp">


    </TextView>
    <View
        android:id="@+id/dividerP2"
        android:layout_width="match_parent"
        android:layout_height="0.8sp"
        android:layout_below="@+id/showPass"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:background="@color/grey" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dividerP2"
        android:weightSum="2"
        android:orientation="horizontal"
        android:id="@+id/profilePass">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:id="@+id/leftProfile1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Password:"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textAlignment="viewEnd"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Password:"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textAlignment="viewEnd"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:id="@+id/rightProfile1">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="new password"
            android:id="@+id/profileConfirmN"
            android:textSize="20dp"
            android:textAlignment="center"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profileConfirmP"
            android:hint="confirm password"
            android:textSize="20dp"
            android:textAlignment="center"/>

    </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:layout_below="@+id/profilePass">

        <Button
            android:id="@+id/btnCancelP"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="Cancel"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="18dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/buttons"

            />

        <Button
            android:id="@+id/btnConfirmProfile"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="Confirm"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:background="@drawable/buttons"
            />


    </LinearLayout>
</RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>